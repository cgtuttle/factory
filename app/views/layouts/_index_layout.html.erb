	<div class="row-fluid">
		<div class="span<%= @span %>">	
			<h4 class="title"><%= @title %></h4>
			<div class="controls">
				<%= yield :controls %>
			</div>
			
			<div class="pagination">
				<% unless index.blank? %>
					<%= will_paginate index, :renderer => BootstrapPagination::Rails %>
				<% end %>
			</div>

			<table class="table table-striped table-bordered table-condensed">
				<thead>
					<%= yield :thead %>
				</thead>
				<tbody>
					<%= yield :table %>
				</tbody>
			</table>

			<div class="pagination">
				<% unless index.blank? %>
					<%= will_paginate index, :renderer => BootstrapPagination::Rails %>
				<% end %>
			</div>
		</div>

	</div>


