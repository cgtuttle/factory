<% set_title "#{@category.code}", prefix: "Edit ", suffix: " Category" %>

<% set_width(6, 10, false) %>


<%= form_for @category, :role => "form" do |f| %>
	<%= render 'layouts/body/errors', :index => @category %>

	<div class="form-group">
		<%= f.label :code %>
		<%= f.text_field :code, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, :class => "form-control" %>
	</div>

	<div class="form-group">
		<%= f.submit :class => "btn btn-primary" %>
		<%= link_to 'Cancel', categories_path, :class => "btn btn-default" %>
	</div>	
<% end %>