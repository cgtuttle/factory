
<% set_title "#{@analysis.code}", prefix: "Edit ", suffix: " Analysis" %>

<% set_width(6, 10, false) %>
	
<%= form_for @analysis do |f| %>
	<%= render 'layouts/body/errors', :index => @analysis %>
	<div class="form-group">
		<%= f.label :code %>
		<%= f.text_field :code, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :instructions %>
		<%= f.text_area :instructions, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.submit :class => "btn btn-primary" %>
		<%= link_to 'Cancel', analyses_path, :class => "btn btn-default" %>
	</div>
<% end %>
