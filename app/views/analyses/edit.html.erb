<% set_title @analysis.code %>

<div class="row top-space">
	<div class="col-xs-12 col-sm-8 col-md-3 col-lg-2">
		<%= form_for @analysis do |f| %>
				<%= render 'layouts/body/errors', :index => @analysis %>

			<div class="form-group">
				<%= f.label :code %>
				<%= f.text_field :code, :class => "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, :class => "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :instructions %>
				<%= f.text_area :instructions, :class => "form-control" %>
			</div>
			<div class="form-group">
				<%= f.submit %>
				<%= f.submit "Cancel" %>
			</div>
		<% end %>
	</div>
</div>


