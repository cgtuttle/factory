<% set_title "Copy #{@copy_item.code}" %>

<% content_for :edit_form do %>

	<div class="row-fluid">

		<%= form_for @new_item do |f| %>
			<div class="row-fluid">
				<%= f.label :code, "Code", :class => "field_label" %>
				<%= f.text_field :code, :class => "text_field" %>
			</div>
				
			<div class="row-fluid bottom-space">
				<%= f.label :name, "Name", :class => "field_label" %>
				<%= f.text_field :name, :class => "text_field" %>
			</div>

			<div class="row-fluid bottom-space">
				<%= label_tag "Include Specs", :class => "checkbox" do %>
					Include All Specs
					<%= check_box_tag "include_specs", :class => "checkbox" %>
				<% end %>
			</div>

				<%= hidden_field_tag 'copy_item_id', @copy_item.id %>

			<div class="row-fluid">
				<%= f.submit "Update", :class => "btn btn-primary" %>
				<%= f.submit "Cancel", :class => "btn" %>
			</div>

		<% end %>	
	</div>

<% end %>
