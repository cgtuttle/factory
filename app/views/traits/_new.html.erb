<div class="row">
	<%= form_for(@trait) do |f| %>		
		<td><%= f.collection_select :category_id, @categories, :id, :code, {:prompt => :true} %></td>
		<td><%= f.text_field :code, :class => "col-md-12"  %></td>
		<td><%= f.text_field :name, :class => "col-md-12" %></td>
		<td><%= f.text_field :label, :class => "col-md-12" %></td>
		<td><%= f.submit "Add Trait" %></td>			
	<% end %>		
</div>