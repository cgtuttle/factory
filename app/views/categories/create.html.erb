<% set_title "Category", prefix: "New " %>

<% set_width(6, 10) %>

<%= form_for @category, :role => "form" do |f| %>
	<%= render 'layouts/body/errors', :index => @category %>

	<div class="form-group">		
		<%= f.label :code %>
		<%= f.text_field :code %>
	</div>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class="form-group">
		<%= f.label :display_order %>
		<%= f.text_field :display_order %>
	</div>
	
	<div>
		<%= f.submit %>
		<%= f.submit "Cancel" %>
	</div>
<% end %>