<tr>
	<%= form_for(@new_item_spec) do |f| %>
		<td></td>
		<td><%= f.collection_select :trait_id, @available_traits, :id, :code, {:prompt => :true}, {:style => "width:100%;"} %></td>
		<td><%= f.text_field :string_value, :style => "width:80%;" %></td>
		
		<td><%= f.text_field :numeric_value, :style => "width:80%;" %></td>
		<td><%= f.text_field :usl, :style => "width:80%;" %></td>
		<td><%= f.text_field :lsl, :style => "width:80%;" %></td>
		<td><%= f.text_field :unit_of_measure, :style => "width:80%;" %></td>		
		<td><%= f.collection_select :analysis_id, Analysis.all, :id, :code, {:prompt => :true}, {:style => "width:100%;"} %></td>
		<td class="hidden-md"><%= f.text_field :eff_date, :style => "width:80%;" , 'data-behaviour' => 'datepicker' %></td>
		<td class="hidden-md"></td>
		
		<td class="hidden-md"></td>
		<td class="centered"><%= f.submit "Add Specification" %></td>
		<%= f.hidden_field :item_id, :value => @item_id %>
	<% end %>
</tr>

