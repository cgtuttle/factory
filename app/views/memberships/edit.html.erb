<% set_title "#{@membership.tenant.name} - #{@membership.user.email}", prefix: "Edit ", suffix: " Membership" %>

<% set_width(6, 10) %>

<%= form_for @membership do |f| %>
	<%= render 'layouts/body/errors', :index => @membership %>
	
	<div class="form-group">
		<%= f.label :role %>
		<%= f.collection_select :role_id, Role.for_list, :id, :role_name, {}, :class => "form-control" %>
	</div>

	<div class="form-group">
		<%= f.submit 'Update', :class => 'btn btn-primary' %>
		<%= link_to 'Cancel', memberships_path, :class => "btn btn-default" %>
	</div>

<% end %>
