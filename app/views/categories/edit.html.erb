<% set_title @category.code %>

<div class="row top-space">
	<div class="col-xs-12 col-sm-8 col-md-3 col-lg-2">
		<%= form_for @category, :role => "form" do |f| %>
			<%= render 'layouts/body/errors', :index => @category %>

			<div class="form-group">
				<%= f.label :code %>
				<%= f.text_field :code, :class => "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, :class => "form-control" %>
			</div>
			<div class="form-group">				
				<%= f.label :display_order %>
				<%= f.text_field :display_order, :class => "form-control", :style => "width:100px" %>
			</div>

			<div class="form-group">
				<%= f.submit %>
				<%= f.submit "Cancel" %>
			</div>	
		<% end %>
	</div>
</div>
