
<div class="row">
	
	<!-- yield to index:controls -->
	<h4 class="title"><%= @title %></h4>
	<div class="controls">
		<%= yield :controls %>
	</div>

	<!-- for larger formats... -->
	<div class="hidden-xs hidden-sm">
		<div class="pagination">
			<% unless index.blank? %>
				<%= will_paginate index, :renderer => BootstrapPagination::Rails %>
			<% end %>
		</div>
		
		<!-- yield to index:thead, index:table -->
		<table class="table table-striped table-bordered table-condensed table-responsive">
			<thead>
				<%= yield :thead %>
			</thead>
			<tbody>
				<%= yield :table %>
			</tbody>
		</table>
		
		<div class="pagination">
			<% unless index.blank? %>
				<%= will_paginate index, :renderer => BootstrapPagination::Rails %>
			<% end %>
		</div>
	</div>
</div>

	<!-- for smaller formats... -->
	<!-- yield to index:multi_view -->
	<div class="hidden-md hidden-lg">
		<%= yield :multi_view %>
	</div>




