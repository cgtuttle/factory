<% if user_signed_in? %>				
	<li>
		<%= link_to("Logout: #{current_user.email}", main_app.destroy_user_session_path, :method => :get) %>
	</li>	  	     
<% else %>
	<%= form_for("user", :url => user_session_path, :html => {:class => "navbar-form navbar-right"}) do |f| %>
		
			<%= f.text_field :email, :placeholder => "email" %>
		  <%= f.password_field :password, :placeholder => "password" %>
		  <%= f.submit 'Sign in', :class => "btn btn-primary btn-sm" %>
		
	<% end %>
<% end %>
