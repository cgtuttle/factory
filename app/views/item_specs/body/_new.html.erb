<tr>
	<%= form_for(@new_item_spec) do |f| %>
		<div class="form-group">
			<td></td>
			<td><%= f.collection_select :trait_id, @available_traits, :id, :code, {:prompt => "Select"}, :class => "form-control input-sm" %></td>
			<td><%= f.text_field :string_value, :class => "form-control input-sm" %></td>			
			<td><%= f.text_field :numeric_value, :class => "form-control input-sm" %></td>
			<td><%= f.text_field :usl, :class => "form-control input-sm" %></td>
			<td><%= f.text_field :lsl, :class => "form-control input-sm" %></td>
			<td><%= f.text_field :unit_of_measure, :class => "form-control input-sm" %></td>		
			<td><%= f.collection_select :analysis_id, Analysis.all, :id, :code, {:prompt => :true}, :class => "form-control input-sm" %></td>
			<td class="hidden-md"><%= f.text_field :eff_date, 'data-behaviour' => 'datepicker', :class => "form-control input-sm" %></td>
			<td class="hidden-md"></td>			
			<td class="hidden-md"></td>
			<td><%= f.submit "Add Specification", :class => "btn btn-default btn-sm" %></td>
			<%= f.hidden_field :item_id, :value => @item_id %>
		</div>
	<% end %>
</tr>

