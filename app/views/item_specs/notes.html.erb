<% set_title "#{@item_spec.item.code} notes" %>

<% content_for :edit_form do %>

	<p>Item: <%= @item_spec.item.code %></p>
	<p>Trait: <%= @item_spec.trait.code %></p>
	
	<%= form_for(@item_spec) do |f| %>
		
		<%= f.label "Notes" %>
		<%= f.text_area :notes %>
		
		<div class="actions">
			<%= f.submit "Update Notes" %>
			<%= f.submit "Cancel" %>
		</div>
	<% end %>	
<% end %>	