
	<tr>
		<%= form_for(@new_item) do |f| %>
			<div class="form-group">		
				<td><%= f.text_field :code, :autofocus => true, :class => "form-control input-sm" %></td>
				<td><%= f.text_field :name, :class => "form-control input-sm" %></td>
				<td colspan="2"><%= f.submit "Submit New Item", :class => "btn btn-default btn-sm" %></td>
				<td></td>
			</div>
		<% end %>		
	</tr>