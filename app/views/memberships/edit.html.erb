<% set_title "#{@membership.tenant.name} - #{@membership.user.email Membership}", prefix: "Edit " %>

<% set_width(6, 10) %>

<%= form_for @membership do |f| %>
	
	<p><%= f.label :role %></p>
	<p><%= f.collection_select :role_id, Role.for_list, :id, :role_name %></p>


	<%= f.submit 'Update', :class => 'btn btn-primary' %>
	<%= f.submit 'Cancel', :class => 'btn' %>
	
<% end %>
