<% set_title "#{@trait.code}", prefix: "Edit ", suffix: " Trait"%>

<% set_width(6, 10) %>

<%= form_for(@trait) do |f| %>
	<%= render 'layouts/body/errors', :index => @trait %>

	<div class="form-group">
		<%=f.label :code %>
		<%= f.text_field :code, :class => "form-control" %>
	</div>
	<div class="form-group">				
		<%=f.label :name, "Definition Name" %>
		<%= f.text_field :name, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%=f.label :category_id %>
		<%= f.collection_select :category_id, @categories, :id, :code, {:include_blank => "Please select"}, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%=f.label :label %>
		<%= f.text_field :label, :class => "form-control" %>
	</div>

	<div class="form-group">
		<%= f.submit :class => "btn btn-primary" %>
		<%= link_to 'Cancel', traits_path, :class => "btn btn-default" %>
	</div>
		
<% end %>