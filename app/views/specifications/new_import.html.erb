<% set_title "Import Item Specifications" %>
<% set_width 10, 12 %>

<% content_for :import do %>	
		<%= form_tag save_import_specifications_path, :multipart => true, :class => "top-space" do %>
			<div class="form-group">
				<%= label_tag 'file', 'Import CSV File' %>
			</div>
			<div class="form-group">				
				<%= file_field_tag :file %>
			</div>
			<div class="form-group top-space">
				<%= submit_tag "Import", :class => "btn btn-primary" %>
				<%= submit_tag "Cancel", :class => "btn btn-default" %>
			</div>
		<% end %>	
<% end %>