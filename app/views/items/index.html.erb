<% set_title "Item list" %>

<% content_for :thead do %>
	<tr>
		<th style="width: 20em">Item Code</th>
		<th style="width: 20em">Name</th>
		<th></th>
	</tr>
<% end %>

<% content_for :table do %>
	<%= render 'new' %>
	<% @items.each do |i| %>
		<tr>
			<td><%= i.code %></td>
			<td><%= i.name %></td>
			<td class="centered"><%= link_to "Edit", edit_item_path(i), :class => 'link' %>
					<%= link_to "Delete", item_path(i), :method => :delete, :confirm => "Delete Item #{i.code}" %>
					<%= link_to "Copy", copy_item_path(i), :method => :copy %></td>
		</tr>
	<% end %>
<% end %>

<% content_for :multi_view do %>
	<% @items.each do |i| %>
		<div class="row">
			<div class="panel panel-default">
				<div class="panel-heading">				
					<strong class="panel-title text-muted"><%= i.code %></strong>
				</div>

				<div class="panel-body">						
					<div>
						<p class="text-muted col-xs-5">Name</p>
						<h4 class="col-xs-7"><%= i.name %></h4>
					</div>
				</div>
				<div class="panel-footer">
					
						<%= link_to "Edit", edit_item_path(i), :class => "btn btn-primary" %>
						
				</div>
				
			</div>
		</div>
	<% end %>
<% end %>