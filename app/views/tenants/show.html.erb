<% provide(:title, 'Tenant members') %>


<% content_for :thead do %>

<h2><%= @tenant.name %></h2>

	<tr>
		<th>User</th>
		<th>Role</th>
		<th></th>
	</tr>
<% end %>

<% content_for :table do %>
	
	<% @memberships.each do |m| %>
		<tr>
			<td><%= m.user.email %></td>
			<td><%= m.role %></td>
			<td><%= link_to "Change Role", edit_membership_path(m.id) %></td>
		</tr>
	<% end %>

<% end %>

<% content_for :footer do %>
	<%= link_to "Add new", new_membership_path, :class => "btn btn-primary" %>
<% end %>	